---
import type { IResume } from '../../libs/iresume'

interface Props {
    resume: IResume
}

const { resume } = Astro.props;
---
<div class="w-10/12 mx-auto mt-4 flex">
    <div class="sidebar w-4/12 mr-5">
        <section class="flex-col text-center  bg-gray-800 hover:bg-gray-700 p-5 rounded-md">
            <img class="rounded-full w-24 h-24 mx-auto" src={resume.profile.avatar} alt={resume.profile.name} />
            <div>
                <h1 class="text-2xl mt-3">{resume.profile.name}</h1>
                <h2 class="text-sm">{resume.profile.title}</h2>
                <h3 class="text-sm mt-2">{resume.profile.location}</h3>
            </div>
            <div class="flex">
                {resume.profile.social.map((social) => (
                    <a href={social.url} class="w-1/3 text-sm mt-3">
                        <svg width="24px" height="24px" stroke-width="1.5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" color="#000000"><path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path><path d="M14.3333 19V17.137C14.3583 16.8275 14.3154 16.5163 14.2073 16.2242C14.0993 15.9321 13.9286 15.6657 13.7067 15.4428C15.8 15.2156 18 14.4431 18 10.8989C17.9998 9.99256 17.6418 9.12101 17 8.46461C17.3039 7.67171 17.2824 6.79528 16.94 6.01739C16.94 6.01739 16.1533 5.7902 14.3333 6.97811C12.8053 6.57488 11.1947 6.57488 9.66666 6.97811C7.84666 5.7902 7.05999 6.01739 7.05999 6.01739C6.71757 6.79528 6.69609 7.67171 6.99999 8.46461C6.35341 9.12588 5.99501 10.0053 5.99999 10.9183C5.99999 14.4366 8.19999 15.2091 10.2933 15.4622C10.074 15.6829 9.90483 15.9461 9.79686 16.2347C9.68889 16.5232 9.64453 16.8306 9.66666 17.137V19" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path><path d="M9.66667 17.7018C7.66667 18.3335 6 17.7018 5 15.7544" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path></svg>
                    </a>
                ))}
            </div>
        </section>
    </div>
    <div class="w-8/12">
        <section class="w-full bg-gray-800 hover:bg-gray-700 p-5 rounded-md">
            <h2 class="text-2xl">Educaci√≥n</h2>
            <div class="mt-5">
                {resume.education.map((education) => (
                    <div class="flex items-end gap-3 pb-2">
                        <div class="w-4/12 text-sm font-bold">{education.institution}</div>
                        <div class="w-5/12 text-sm">{education.degree}</div>
                        <div class="w-3/12 text-sm text-right">{education.startDate} - {education.endDate}</div>
                    </div>
                ))}
            </div>
        </section>

        <section class="mt-5 bg-gray-800 hover:bg-gray-700 p-5 rounded-md">
            <h2 class="text-2xl">Experiencia</h2>

            <div class="mt-5">
                {resume.jobs.map((job) => (
                    <div class="flex items-end gap-3 pb-2">
                        <div class="w-4/12 text-sm font-bold">{job.company}</div>
                        <div class="w-5/12 text-sm">{job.title}</div>
                        <div class="w-3/12 text-sm text-right">{job.startDate} - {job.endDate}</div>
                    </div>
                ))}
            </div>
        </section>

        <section class="mt-5 bg-gray-800 p-5 rounded-md">
            <h2 class="text-2xl mb-4">Skills</h2>

            <div class="grid grid-cols-3">
                {resume.profiles.map((profile) => (
                    <div class=" bg-indigo-800 p-5 m-2 rounded-lg">
                        <h3>{profile.name}</h3>

                        <div class="flex-col">
                            {profile.sections.map((section) => (
                                <div class="text-sm pt-3 pb-3">
                                    <h4>{section.name}</h4>
                                    <div class="grid grid-cols-2 text-center items-start">
                                        {section.tags.map((tag) => (
                                            <span class="text-xs bg-gray-900 hover:bg-red-900 p-1 m-1 rounded-md">{tag}</span>
                                        ))}
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <section class="mt-5 bg-gray-800 p-5 rounded-md">
            <h2 class="text-2xl mb-4">Insignias</h2>
            <div class="insignias grid grid-cols-3">
                {resume.insiginias.map((insignia) => (
                    <div class="text-center bg-indigo-800 p-5 m-2 rounded-lg">
                        <img class="w-12 h-12 mt-3 mx-auto rounded-full" src={insignia.img} alt={insignia.name} />
                        <span class="text-sm">{insignia.name}</span>
                    </div>
                ))}
            </div>
        </section>
    </div>  
</div>